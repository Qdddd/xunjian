<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.FinishedWorkDetailActivity">

    <include layout="@layout/actionbar"/>
    <View
        android:id="@+id/top_gray"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/darkGray"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
    <TableRow
        android:padding="10dp"
        android:background="@drawable/dsah_line_bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工单编号："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/workNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"/>

    </TableRow>
    <TableRow
        android:padding="10dp"
        android:background="@drawable/dsah_line_bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工单名称："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/workName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:padding="10dp"
        android:background="@drawable/dsah_line_bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线路名称："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:padding="10dp"
        android:background="@drawable/dsah_line_bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派 单 人  ："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/sendOrderPerson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:padding="10dp"
        android:background="@drawable/dsah_line_bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派单时间："
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/sendOrderTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </TableRow>

        <TableRow
            android:padding="10dp"
            android:background="@drawable/dsah_line_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  处 理 人 ："
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/handler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:padding="10dp"
            android:background="@drawable/dsah_line_bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成时间："
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/accomplishTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>